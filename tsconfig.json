{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true, // 支持 ES6 for...of 循环
    "allowJs": true, // 允许编译 JavaScript 文件
    // "types": ["node", "webpack"], // 引入的类型声明文件
    // "typeRoots": ["./types", "./node_modules/@types"], // 类型声明文件的根目录
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
  },
  "includes": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "electron-main/**/*.ts",
    "electron-preload/**/*.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}
